<div class="policy-header">
    <div class="policy-header-summary">
        <h4>{{this.policyName}}</h4>
        <span class="policy-header-summary-counts">{{this.policySubtitle}}</span>
    </div>

    <div class="policy-header-buttons-right">
        {{#if this.representsPolicy}}
            <BsButton @type="tertiary" @size="sm" @onClick={{action this.policyChangeClick}}>
                <FaIcon @icon="exchange-alt" @size="2x"/>
            </BsButton>
        {{/if}}
    </div>
</div>

<PolicyModal
    @isOpen={{this.isPolicyChangeOpen}}
    @service={{this.service}}
    @onHide={{this.policyChangeHidden}}
    @fetchPoliciesTask={{this.fetchPoliciesTask}}
    @onSubmit={{this.policyChangeOnSubmit}}
    >
</PolicyModal>